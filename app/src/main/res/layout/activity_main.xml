<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ainor.com.my.hikerswatch.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView2"
        app:srcCompat="@drawable/trail2"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:text="Latitude:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lalitudeTextView"
        android:textSize="24sp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:text="Longtitude:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/longitudeTextView"
        android:textSize="24sp"
        android:layout_below="@+id/lalitudeTextView"
        android:layout_alignStart="@+id/lalitudeTextView"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black"/>
    <TextView
        android:text="Accuracy:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accuracyTextView"
        android:textSize="24sp"
        android:layout_below="@+id/longitudeTextView"
        android:layout_alignStart="@+id/longitudeTextView"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:text="Altitude:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/altitudeTextView"
        android:textSize="24sp"
        android:layout_below="@+id/accuracyTextView"
        android:layout_alignStart="@+id/accuracyTextView"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:text="Address :\n Jalan Street \n Bandar Town"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addressTextView"
        android:textSize="24sp"
        android:layout_below="@+id/altitudeTextView"
        android:layout_alignStart="@+id/altitudeTextView"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:text="Hiker's Watch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/textView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"/>

</RelativeLayout>
